<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"

    >

    <View
        android:id="@+id/LineaVertical"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <View
        android:id="@+id/LineaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/ImagenBillete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dinero" />


    <ImageView
        android:id="@+id/dollar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@id/LineaHorizontal"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/LineaVertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.469"
        app:srcCompat="@drawable/ic_pig_1"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/EnviarDinero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-120dp"
        android:text="SEND MONEY"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/LineaHorizontal"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/LineaVertical"

        app:layout_constraintTop_toTopOf="@id/dollar"
        app:layout_constraintVertical_bias="0.543" />

    <ImageView
        android:id="@+id/dollar2"
        android:layout_width="35dp"
        android:layout_height="49dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pig_2"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/PedirDinero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="15dp"
        android:text="REQUEST MONEY"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/LineaVertical"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/scanToPlay"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="77dp"

        app:layout_constraintBottom_toTopOf="@+id/Scanear"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_pig_3"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/Scanear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="192dp"
        android:text="SCAN TO PLAY"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LineaHorizontal" />

    <ImageView
        android:id="@+id/revisar"
        android:layout_width="45dp"
        android:layout_height="48dp"
        android:layout_marginEnd="78dp"
        app:layout_constraintBottom_toTopOf="@+id/RevisarTransacciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_pig_4"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/RevisarTransacciones"
        android:layout_width="111dp"
        android:layout_height="39dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="192dp"
        android:text=" REVIEW YOUR\nTRANSACTIONS"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/LineaVertical"
        app:layout_constraintTop_toBottomOf="@+id/LineaHorizontal" />


</androidx.constraintlayout.widget.ConstraintLayout>