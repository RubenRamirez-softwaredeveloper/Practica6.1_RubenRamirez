<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/FondoImagenPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="535dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/transformers"

        />

    <ImageView
        android:id="@+id/Caratula"
        android:layout_width="231dp"
        android:layout_height="411dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="328dp"

        app:layout_constraintStart_toStartOf="@+id/FondoImagenPrincipal"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/transformers_cartel" />

    <TextView
        android:id="@+id/TituloPelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Transformers: el \ndespertar de las bestias"

        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/Caratula"
        app:layout_constraintTop_toBottomOf="@+id/FondoImagenPrincipal" />

    <ImageView
        android:id="@+id/Compartir"
        android:layout_width="65dp"
        android:layout_height="111dp"
        android:layout_marginStart="404dp"
        android:layout_marginTop="228dp"
        app:layout_constraintStart_toStartOf="@+id/TituloPelicula"
        app:layout_constraintTop_toTopOf="@+id/Caratula"
        app:srcCompat="@drawable/ic_share_black_24dp" />

    <Button
        android:id="@+id/bAlquilar"
        android:layout_width="300dp"
        android:layout_height="91dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="420dp"
        android:backgroundTint="#000000"
        android:text="ALQUILAR"
        android:textSize="30dp"
        app:cornerRadius="6dp"
        app:layout_constraintStart_toStartOf="@+id/FondoImagenPrincipal"
        app:layout_constraintTop_toTopOf="@+id/Caratula"


        />

    <Button
        android:id="@+id/bComprar"
        android:layout_width="300dp"
        android:layout_height="91dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="748dp"
        android:backgroundTint="#000000"
        android:text="COMPRAR"
        android:textSize="30dp"
        app:cornerRadius="6dp"
        app:layout_constraintStart_toEndOf="@+id/bAlquilar"
        app:layout_constraintTop_toTopOf="@+id/FondoImagenPrincipal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="144dp"
        android:clickable="true"
        android:contentDescription="play"
        app:backgroundTint="@android:color/holo_red_dark"
        app:backgroundTintMode="add"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/bAlquilar"
        app:layout_constraintTop_toTopOf="@+id/bAlquilar"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:clickable="true"
        android:contentDescription="aÃ±adir"
        app:backgroundTint="#09E3FF"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/bAlquilar"
        app:layout_constraintTop_toTopOf="@+id/bAlquilar"
        app:srcCompat="@drawable/ic_family" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:clickable="true"
        android:contentDescription="manzana"
        app:backgroundTint="#FBEE7A"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="@+id/bComprar"
        app:layout_constraintTop_toTopOf="@+id/bComprar"
        app:srcCompat="@drawable/tomato" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="104dp"
        android:clickable="true"
        android:contentDescription="pantalla"
        app:backgroundTint="#3AFF0E"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/bComprar"
        app:layout_constraintTop_toTopOf="@+id/bComprar"
        app:srcCompat="@drawable/ic_launcher_background" />

    <View
        android:id="@+id/Divide"
        android:layout_width="630dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="388dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="@+id/bAlquilar"
        app:layout_constraintTop_toTopOf="@+id/TituloPelicula" />

    <TextView
        android:id="@+id/DescripcionPelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="24dp"
        android:text="Descripcion de la Pelicula"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/Divide"
        app:layout_constraintTop_toTopOf="@+id/Divide" />


</androidx.constraintlayout.widget.ConstraintLayout>